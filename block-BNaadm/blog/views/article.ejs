<!DOCTYPE html>
<html>
  <head>
    <title>article</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <header>
      <div class="container flex justify-between align-center">
        <a href="/">Home</a>
        <a href="/users/new">Add Article</a>
      </div>
    </header>
    <main>
      <h2 class="text-center">Articles</h2>
      <section>
        <% if(data.length) { %> <% data.forEach(element => { %>
        <article>
          <h1><%= element.title %></h1>
          <p><%= element.description.substr(0,50)%>...</p>
          <a href="/users/<%= element._id%>">Details of the article</a>
        </article>
        <% }) %> <%}else { %>
        <h2>no article</h2>
        <% } %>
      </section>
    </main>
  </body>
</html>
